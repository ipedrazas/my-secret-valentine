<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bsm.mysecretvalentine"
    android:versionCode="4"
    android:versionName="1.0.3" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bsm.mysecretvalentine.ImageGalleryActivity"
            android:label="@string/select_image_title" />
        <activity
            android:name="com.bsm.mysecretvalentine.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bsm.mysecretvalentine.WizardActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_wizard"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.bsm.mysecretvalentine.MessageActivity"
            android:label="@string/title_activity_message" >
        </activity>
        <activity
            android:name="com.bsm.mysecretvalentine.ThankyouActivity"
            android:label="@string/title_activity_thankyou" >
        </activity>
        <activity
            android:name="com.bsm.mysecretvalentine.GalleryActivity"
            android:label="@string/title_activity_gallery" >
        </activity>
        <activity
            android:name="com.bsm.mysecretvalentine.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>